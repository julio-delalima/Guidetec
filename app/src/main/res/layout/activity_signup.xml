<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/splashLayout"
    tools:context=".account.SignupActivity"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:id="@+id/image_signup"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wa_guidetec" />

        <RelativeLayout
            android:id="@+id/rellay1_signup"
            android:layout_below="@+id/image_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textSize="30sp"
                android:textColor="@color/colorWhiteTransparent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/linlay1_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_signup"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:fontFamily="sans-serif-light"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteTransparent"
                    android:textSize="15sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="san-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/etEmail_signup"
                    android:maxLines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linlay1_signup"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ContraseÃ±a"
                        android:fontFamily="sans-serif-light"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:layout_height="40dp"
                        android:background="@drawable/et_bg"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="san-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/etPassword_signup"
                        android:focusableInTouchMode="true"
                        android:maxLines="1"
                        android:imeOptions="actionUnspecified"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/linlay1_signup"
                android:layout_marginTop="50dp"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:background="@drawable/btn_bg"
                android:textColor="@color/colorWhite"
                android:fontFamily="san-serif-medium"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:id="@+id/btnSignup"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>